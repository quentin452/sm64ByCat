{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kill sm64.us.f3dex2e.exe",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "if (Get-Process -Name 'sm64.us.f3dex2e' -ErrorAction SilentlyContinue) { Stop-Process -Name 'sm64.us.f3dex2e' -Force }"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },        
        {
            "label": "Build Super Mario 64",
            "type": "shell",
            "command": "make",
            "args": [
                "RENDER_API=D3D12",
                "TEXTURE_FIX=1",
                "DISCORDRPC=1",
                "TEXTSAVES=1",
                "EXT_OPTIONS_MENU=1"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "Kill sm64.us.f3dex2e.exe"
        },
        {
            "label": "run-Super-Mario-64",
            "type": "process",
            "command": "${workspaceFolder}/build/us_pc/sm64.us.f3dex2e.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
        },
        {
            "label": "build-and-run-Super-Mario-64",
            "type": "process",
            "command": "${workspaceFolder}/build/us_pc/sm64.us.f3dex2e.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "dependsOn": "Build Super Mario 64"
        }
    ]
}
